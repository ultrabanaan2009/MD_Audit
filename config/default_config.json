{
  "title_rules": {
    "min_length": 50,
    "max_length": 60,
    "optimal_pixels": 600,
    "weight": 15.0,
    "comment": "2025 Standard: 50-60 chars or 600px max (Ahrefs/SEMrush)"
  },
  "description_rules": {
    "min_length": 150,
    "max_length": 160,
    "mobile_max_length": 120,
    "optimal_pixels": 920,
    "weight": 10.0,
    "comment": "2025 Standard: 150-160 chars desktop, 120 mobile (920px max)"
  },
  "keyword_rules": {
    "min_density": 0.005,
    "max_density": 0.02,
    "max_auto_keywords": 5,
    "weight": 15.0,
    "comment": "2025: Keyword stuffing penalized, natural usage preferred"
  },
  "content_rules": {
    "min_length": 1500,
    "optimal_length": 2000,
    "max_length": 3500,
    "min_h1_count": 1,
    "max_h1_count": 1,
    "min_h2_count": 3,
    "min_image_alt_ratio": 0.8,
    "alt_text_max_length": 125,
    "structure_weight": 20.0,
    "comment": "2025 Standard: 1500-2500 words optimal (Backlinko avg 1447 for top 10)"
  },
  "content_depth_rules": {
    "optimal_min_words": 1500,
    "optimal_max_words": 2500,
    "acceptable_max_words": 4000,
    "section_optimal_min": 4,
    "section_optimal_max": 8,
    "paragraph_min_words": 100,
    "paragraph_max_words": 200,
    "evidence_min_citations": 2,
    "evidence_min_data_points": 2
  },
  "link_rules": {
    "min_internal_links": 3,
    "optimal_internal_links_per_1000_words": 3,
    "max_internal_links_per_1000_words": 5,
    "min_external_links": 1,
    "max_total_links": 150,
    "weight": 7.0,
    "poor_anchor_texts": [
      "点击这里",
      "click here",
      "这里",
      "here",
      "link",
      "链接",
      "read more"
    ],
    "comment": "2025 Standard: 3-5 internal links per 1000 words (Rush Analytics)"
  },
  "eeat_rules": {
    "require_author_info": true,
    "require_publish_date": true,
    "min_citations": 2,
    "min_external_references": 1,
    "weight": 10.0,
    "high_authority_domains": [
      "gov",
      "edu",
      "wikipedia.org",
      "docs.python.org",
      "developer.mozilla.org",
      "w3.org",
      "schema.org",
      "developers.google.com",
      "microsoft.com/docs"
    ],
    "comment": "2025 E-E-A-T: Experience, Expertise, Authoritativeness, Trust"
  },
  "ai_search_rules": {
    "check_faq_section": true,
